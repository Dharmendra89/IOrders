        <column id="Stockproduct" name="product" parent="Product" label="Товар" key="true"/>
        <column id="StockstockLevel" name="stockLevel" type="int" label="Уровень запаса"/>
      </columns>
    </table>
    <table id="Partner" name="Партнер" nameSet="Партнеры" level="0">
